# Custom Kali Linux Attacker Machine
# Challenge: insecure-ftp-server
# Type: network
# Generated with minimal toolset

FROM kalilinux/kali-rolling

ENV DEBIAN_FRONTEND=noninteractive

# Install essential networking and FTP tools
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    ftp \
    lftp \
    nmap \
    netcat-traditional \
    curl \
    wget \
    net-tools \
    iputils-ping \
    dnsutils \
    telnet \
    vim \
    nano \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /root

# Keep container running
CMD ["/bin/bash", "-c", "while true; do sleep 3600; done"]
